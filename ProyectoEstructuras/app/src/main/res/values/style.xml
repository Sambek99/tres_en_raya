<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema personalizado basado en Material Design -->
    <style name="Theme.ProyectoEstructuras" parent="Theme.Material3.DayNight">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/Lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/Lavender</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fondo -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Texto -->
        <item name="android:textColor">@color/black</item>

        <!-- Botones -->
        <item name="buttonStyle">@style/Widget.Material3.Button</item>
    </style>

    <!-- Puedes agregar mÃ¡s estilos personalizados si es necesario -->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/Lavender</item>
        <item name="android:textColor">@color/white</item>
    </style>
